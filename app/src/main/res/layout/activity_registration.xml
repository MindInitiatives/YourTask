<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reg_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registration"
                android:textColor="@android:color/white"
                android:textSize="45sp"
                android:gravity="center" />

            <EditText
                android:id="@+id/name_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:background="@drawable/edtdesign"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:hint="Username"
                android:inputType="textPersonName"
                android:textColorHint="#34495E"
                android:padding="10dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/email_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edtdesign"
                android:drawableStart="@drawable/ic_mail_black_24dp"
                android:drawableLeft="@drawable/ic_mail_black_24dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColorHint="#34495E"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/password_reg"
                android:drawableStart="@drawable/ic_lock_black_24dp"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:hint="Password"
                android:background="@drawable/edtdesign"
                android:padding="10dp"
                android:textColorHint="#34495E"
                android:textSize="20sp"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"/>

            <info.hoang8f.widget.FButton
                android:id="@+id/reg_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Register"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:fButtonColor="@color/fbutton_color_wet_asphalt" />

            <TextView
                android:id="@+id/login_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Already have an Account? Log in here"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:padding="7dp"
                android:textAppearance="?android:textAppearanceSmall"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>